<project name="TestProject" default="dist" basedir="./module3/ant-task/">

  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>
  <property name="lib"   location="lib"/>
  <property name="test"   location="test"/>

  <tstamp>
      <format property="TODAY_MY" pattern="yyyymmdd-hhiiss"/>
  </tstamp>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" >
    <javac srcdir="${src}" destdir="${build}">
      <classpath>
           <pathelement path="${lib}/commons-collections-3.2.1.jar"/>
      </classpath>
    </javac>
    <javac srcdir="${test}" destdir="${build}">
      <classpath>
           <pathelement path="${lib}/junit-4.11.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="dist" depends="compile" >
    <mkdir dir="${dist}/lib"/>
    <jar jarfile="${dist}/lib/testProject-${TODAY_MY}.jar" basedir="${build}"/>
       <copy file="./build.xml" tofile="${dist}/lib/build-${TODAY_MY}.xml" overwrite="true"/>
       <copy file="${lib}/commons-collections-3.2.1.jar" tofile="${dist}/lib/commons-collections-3.2.1-${TODAY_MY}.jar" overwrite="true"/>
  </target>

  <target name="test">
    <echo "Test"/>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>

